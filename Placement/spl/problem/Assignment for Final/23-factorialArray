#include <stdio.h>

// Function to calculate factorial of a number
int factorial(int num) {
    int result = 1;
    for (int i = 1; i <= num; i++) {
        result *= i;
    }
    return result;
}

int main() {
    int n;
    printf("Enter the number of elements in the array: ");
    scanf("%d", &n);

    int arr[n];

    // Input elements into the array
    printf("Enter %d elements:\n", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // Calculate and display factorial for each element in the array
    printf("Factorials of the numbers in the array:\n");
    for (int i = 0; i < n; i++) {
        int fact = factorial(arr[i]);
        printf("%d! = %d\n", arr[i], fact);
    }

    return 0;
}
